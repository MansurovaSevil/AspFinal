@model ASPFINAL.ViewModel.FirstPage
@{
    ViewBag.Title = "AllBlog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="subpage-bg">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="title-block title-block_subpage">
                    <h2>Our Official Blog</h2>
                    <p><a href="@Url.Action("Index","Home")"> Home</a> / Blog</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="main-block">
    <div class="container-fluid">
        <div class="row">
            @foreach (var item in Model.blogs)
            {
                <div class="col-md-6 col-lg-3 article-first">
                    <div class="news-block">
                        <img src="~/Public/Blog/@item.Photo" alt="#" class="img-fluid">
                        <div class="news-title">
                            <p>@item.Date • @item.Name</p>
                            <h5>@item.Slogan</h5>
                            <p class="blog2-thumbnail-name">By Ankita Luthar</p>

                            <a href="@Url.Action("Read","Blog",new {id=item.Id })" class="blog2-link">Read More ➝</a>
                        </div>
                    </div>
                </div>

            }
          
        </div>
      
    </div>
</section>